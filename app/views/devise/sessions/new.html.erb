<style>
  body {
    background: #6a3093; /* fallback for old browsers */
    background: -webkit-linear-gradient(to left, #6a3093 , #a044ff); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to left, #6a3093 , #a044ff); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  }
</style>
<div class="container">
  <div class="jumbotron">
    <div class="row top">
      <div class="col-md-10 col-md-offset-1">
        <h1 class="text-center" >Welcome to Codersations <i class="fa fa-smile-o"></i></h1>
        <p class="text-center">Providing the best environment for eager students to learn code  </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <button class="btn btn-primary pull-left" disabled>Login with Github</button>
        <button class="btn btn-primary pull-right" disabled>Login with BitBucket</button>
        <br>
        <hr>
        <h3 class="text-center">Or</h3>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title text-center text-info">Sign in</h3>
          </div>
          <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <fieldset>
                  <div class="form-group">
                    <%= f.input :email, required: false, autofocus: true %>
                  </div>
                  <div class="form-group">
                    <%= f.input :password, required: false %>
                  </div>
                  <div class="checkbox">
                    <label>
                      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    </label>
                  </div>
                  <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
                  <br>
                  <small class="text-center pull-left"><%= link_to 'Forgot Password?', new_user_password_path %></small>
                  <small class="text-center pull-right"><%= link_to 'New to Codersations?', new_user_registration_path %></small>
                </fieldset>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>