<% if controller_name == 'comments' %>
    <%= simple_form_for [@question, @comment], input_html: {class: 'form-horizontal'} do |f| %>
        <%= f.input :content, as: :wysihtml5, autofocus: true, required: true, class: 'form-control' %>
        <%= f.button :submit %>
    <% end %>
<% else %>
    <%= simple_form_for [question, comment], input_html: {class: 'form-horizontal'} do |f| %>
        <%= f.input :content, as: :wysihtml5, autofocus: true, required: true, class: 'form-control' %>
        <%= f.button :submit %>
    <% end %>
<% end %>
