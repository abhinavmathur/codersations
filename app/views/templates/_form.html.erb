<body <%= "data-no-turbolinks='true'".html_safe if controller_name=="templates" %>>

<%= simple_form_for [@category,@template] do |f| %>
    <% if action_name == 'edit' %>
        <p><bold><%= @category.name %></bold></p>
    <% else %>
        <%= f.association :category, include_blank: false %>
    <% end %>
    <%= f.input :name %>
    <%= f.input :description, as: :wysihtml5%>
    <%= f.input :points_covered, as: :wysihtml5%>
    <% if action_name == 'edit' %>
        <%= f.button :submit, data: { disable_with: 'Updating new template...'} %>
    <% else %>
        <%= f.button :submit, data: { confirm: "Are you sure you want to keep the category as '#{@category.name}'
         ? \nYou cannot change it later !", disable_with: 'Creating new template...'} %>
    <% end %>
<% end %>
