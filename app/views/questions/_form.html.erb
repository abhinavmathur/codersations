<%= simple_form_for [@category, @tutorial, @question], input_html: {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.input :title, autofocus: true, required: true, placeholder: 'Type your question here', class: 'form-control' %>
    </div>
    <div class="form-group">
      <% if current_user == @tutorial.author %>
          <%= f.input :pinned, label: 'Check box to make it a pinned question', class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <% if !@question.solved? && @question.user_id == current_user.id %>
          <%= f.input :solved, label: 'Check box if your question was solved', class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.button :submit, class: 'btn btn-success' %>
    </div>
<% end %>
