<h1>Edit Question</h1>
<%= simple_form_for @question, input_html: {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.input :title, autofocus: true, required: true, placeholder: 'Type your question here', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :content, as: :wysihtml5, rows: 10, class: 'form-control', input_html: { id: 'description-textarea'} %>
    </div>
    <div class="form-group">
      <% if current_user == @tutorial.author %>
          <%= f.input :pinned, label: 'Check box to make it a pinned question', class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <% if !@question.solved? && @question.user_id == current_user.id %>
          <%= f.input :solved, label: 'Check box if your question was solved', class: 'form-control' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.button :submit, class: 'btn btn-success' %>
    </div>
<% end %>
<script>
  $('#description-textarea').wysihtml5({toolbar:
  {
    'blockquote': false,
    'image': false,
    'lists': false,
    'emphasis': {
      'small': false,
      'underline': false
    },
    'link': false
  }})
</script>