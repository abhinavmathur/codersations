<h1><%= @question.title %></h1>
<p><%= @question.content %></p>
<% user = User.find_by_id(@question.user_id) %>
<p>Asked by <%= link_to user.name, user_path(user) %></p>
<hr>
<h3 class="text-center text-success">Answer Section</h3>
<div class="comment-section col-md-8 col-md-offset-2">
  <% @comments.each do |comment| %>
      <div class="well" id=<%= "comment_#{comment.id}" %>>
        <%= link_to comment_path(comment), method: :delete, remote: true, data: {title: 'Delete Comment', confirm: 'Are you sure?', commit: 'Sure !'} do %>
            <span class="pull-right"><i class="fa fa-close"></i></span>
        <% end %>
        <p><%= comment.content.html_safe %></p>
        <% comment_author = User.find_by_id(comment.user_id).name %>
        <p><%= comment_author %></p>
        <%= link_to 'Edit Comment', [:edit, comment], class: 'btn btn-info btn-sm' %>
      </div>
  <% end %>
</div>
<%= render 'form_for_new_comments' %>