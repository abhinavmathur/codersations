<%= link_to 'Create a category', new_admin_category_path, class: 'btn btn-success btn-lg' %>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Number</th>
    <th>Category</th>
    <th>Options</th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Edit Category Name', edit_admin_category_path(category), class: 'btn btn-info btn-xs' %>
          <%= link_to 'Delete', admin_category_path(category), method: :delete, data: {confirm: 'Are you sure ?'}, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>