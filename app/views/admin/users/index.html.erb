<h1 class="text-primary text-center">List of Users</h1>
<table class="table table-hover">
  <thead>
  <tr>
    <th>User ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Options</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <th><%= user.id %></th>
        <th><%= link_to user.name, admin_user_path(user) %></th>
        <th><%= user.email %></th>
        <th>
          <%= link_to 'User Page', admin_user_path(user), class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Edit User', edit_admin_user_path(user), class: 'btn btn-sm btn-info' %>
          <%= link_to 'Delete User', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?'},class: 'btn btn-sm btn-danger' %>
        </th>
      </tr>
  <% end %>
  </tbody>
</table>