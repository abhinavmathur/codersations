<% @tutorials.each do |tutorial| %>
    <%= link_to tutorial.title, category_tutorial_path(tutorial.category, tutorial) %> |
    <%= link_to tutorial.category.name, category_path(tutorial.category) %> |
    <% if tutorial.author %>
        <%= link_to tutorial.author.name, user_path(tutorial.author) %>
    <% end %>
    <br>
<% end %>